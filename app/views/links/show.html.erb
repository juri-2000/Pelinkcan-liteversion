<%= render "layouts/header" %>
<main class="link-main">
   <% @links.each do |l| %>
   <div class="box" style="border: solid 2px">
      <ul>
         <li><a href="<%= l.url %>"><%= l.title %></a></li>
         <li><%= l.body %></li>
         <li class="delete"> <%= link_to "削除", link_path(@link),  method: :delete ,data: { confirm: "本当に消しますか？" },style:"font-size:10px; color:red;"%></li>
      </ul>
   </div>
   <% end %>
</main>